<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".SafetyNumber">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="15dp">

        </EditText>
        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:text="Save"
            >

        </Button>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Safety Number : 555-564-849"
            android:gravity="center"
            ></TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:text="Hola le recomendamos que guarde un numero el cual sea de su confianza y pueda contar con en situaciones anímicamente malas. la aplicación se contactará con su safety number si se detecta que esta pasando un mal momento enviándole un mensaje de que usted *Vicente Gandolfo* necesita hablar con un amigo."

            ></TextView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>