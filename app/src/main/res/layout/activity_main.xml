<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEAEC"
    android:outlineAmbientShadowColor="#000000"
    android:outlineSpotShadowColor="#000000"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="362dp"
        android:layout_height="504dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        app:srcCompat="@drawable/custom_button2" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="266dp"
        android:layout_height="241dp"
        android:src="@drawable/gwensaludo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302"></pl.droidsonroids.gif.GifImageView>

    <Button
        android:id="@+id/btn_historial"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="21dp"
        android:layout_weight="1"
        android:alpha="65"
        android:background="@drawable/custom_button"
        android:backgroundTint="#8F8167D5"
        android:fontFamily="@font/fredo"
        android:text="Tu historial emocional"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/btn_DBI_II" />

    <Button
        android:id="@+id/btn_DBI_II"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="125dp"
        android:layout_weight="1"
        android:alpha="65"
        android:background="@drawable/custom_button"
        android:backgroundTint="#A83E61D2"
        android:fontFamily="@font/fredo"
        android:text="fORMULARIO DE AYUDA"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_Nayudas"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="13dp"
        android:layout_weight="1"
        android:alpha="65"

        android:background="@drawable/custom_button"
        android:backgroundTint="#9C5FC2F8"
        android:fontFamily="@font/fredo"
        android:text="Contacto de ayuda profesional"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/btn_historial"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/btn_logout"
        android:layout_width="56dp"
        android:layout_height="57dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_button"
        android:backgroundTint="#B388FF"
        android:scaleType="fitCenter"
        android:src="@drawable/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"></ImageView>

    <Button
        android:id="@+id/btn_emotion"
        android:layout_width="324dp"
        android:layout_height="57dp"
        android:background="@drawable/backgroundbutton"
        android:backgroundTint="#C1A6EDFF"
        android:fontFamily="@font/fredo"
        android:text="¿Cómo estuvo tu día?"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.416"></Button>

    <TextView
        android:id="@+id/txtVSaludo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="27dp"
        android:text="¡Hola"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gifImageView"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.705" />

    <TextView
        android:id="@+id/txtVSaludo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="21dp"
        android:text="Personita"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gifImageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cartasconsejos"
        android:layout_width="325dp"
        android:layout_height="200dp"
        app:cardCornerRadius="25dp"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/consejo_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adopte buenos hábitos de higiene, mantener una buena higiene personal mejora el estado animico."

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>