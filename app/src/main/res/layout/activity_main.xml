<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    >


    <Button
        android:id="@+id/btn_emotion"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp"
        android:layout_weight="1"
        android:alpha="65"
        android:background="@drawable/custom_button"
        android:backgroundTint="#EAECEE"
        android:fontFamily="@font/fredo"
        android:text="emoción"
        android:textColor="#000000"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btn_historial"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:alpha="65"
        android:background="@drawable/custom_button"
        android:backgroundTint="#ABEBC6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btn_historial"
        android:text="Historial" />

    <Button
        android:id="@+id/btn_SafetyN"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:alpha="65"
        android:visibility="gone"
        android:background="@drawable/custom_button" />

    <Button
        android:id="@+id/btn_Nayudas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#C39BD3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:alpha="65"
        android:background="@drawable/custom_button" />

    <TextView
        android:id="@+id/contactotextm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:layout_marginRight="77dp"
        android:text="Contacto" />

    <Button
        android:id="@+id/btn_DBI_II"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="160dp"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:alpha="65"
        android:background="@drawable/custom_button"
        android:backgroundTint="#F7DC6F" />

    <TextView
        android:id="@+id/txttestdbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="175dp"
        android:layout_marginRight="77dp"
        android:visibility="gone"
        android:text="Test DBI-II" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:alpha="65"
        android:background="@drawable/custom_button"
        android:backgroundTint="#E74C3C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/btn_logout"
        android:text="Logout" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cartasconsejos"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:alpha="0"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <TextView
                android:id="@+id/consejo_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adopte buenos hábitos de higiene, mantener una buena higiene personal mejora el estado animico."

                />

        </LinearLayout>



    </androidx.cardview.widget.CardView>





</RelativeLayout>